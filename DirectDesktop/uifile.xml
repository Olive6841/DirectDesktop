<duixml>
	<HWNDElement resid="main" layoutpos="client" layout="borderlayout()" sheet="default">
		<Element id="atom(sampleText)" content="" layoutpos="top"/>
		<Element layout="flowlayout()" layoutpos="top">
			<CCPushButton id="atom(testButton5)" height="32rp" width="120rp" content="Initialize layout" tooltip="true" accdesc="Do not press too quickly!"/>
			<CCPushButton id="atom(testButton)" height="32rp" width="120rp" content="Refresh" Enabled="false"/>
			<CCPushButton id="atom(testButton2)" height="32rp" width="120rp" content="Simulate dragdrop" Enabled="false"/>
			<CCPushButton id="atom(testButton3)" height="32rp" width="120rp" content="Simulate popup"/>
			<CCPushButton id="atom(testButton4)" height="32rp" width="120rp" content="COLORS"/>
			<Element id="atom(itemcountstatus)" animation="alpha|s|slow|delaylong" foreground="themeable(gtc(ControlPanel,7,1,3803), hotlight)" font="messagefont;115%"/>
		</Element>
		<Element layout="borderlayout()" layoutpos="client" padding="rect(16rp,16rp,16rp,16rp)">
			<Element id="atom(mainContainer)" layout="filllayout()" layoutpos="client" borderthickness="rect(1,1,1,1)" bordercolor="white" background="gradient(lightblue, lightsteelblue, 1)">
				<Element id="atom(UIContainer)" layout="filllayout()" layoutpos="client" margin="rect(4rp,4rp,4rp,4rp)" background="argb(0,0,0,0)">

				</Element>
				<Element id="atom(selector)" class="selector" layoutpos="none" animation="alpha|s|mediumfast" background="themeable(20066, hotlight)" borderthickness="rect(1rp,1rp,1rp,1rp)" bordercolor="themeable(20005, highlight)"/>
				<Element id="atom(fullscreenpopup)" layout="filllayout()" layoutpos="none" background="argb(0,0,0,0)" margin="rect(0,0,0,0)" padding="rect(-4rp,-4rp,-4rp,-4rp)" alpha="0" animation="alpha|linear|veryfast">
					<Element id="atom(fullscreenpopupbase)" layout="filllayout()" layoutpos="client"  background="argb(128,16,16,16)" visible="false">
						<Element id="atom(fullscreeninner)" layout="filllayout()" layoutpos="absolute" width="300rp" height="100rp" background="argb(0,0,0,0)" content="Test" font="iconfont;400%" contentalign="topleft" visible="false"/>
					</Element>
				</Element>
			</Element>
		</Element>
	</HWNDElement>
	<Button resid="emptyspace" layoutpos="client" background="argb(0,0,0,0)">
		<Button id="atom(checkboxElem)" layoutpos="none"/> ///dummy checkbox to prevent crashing
	</Button>
	<Button resid="outerElem" layout="filllayout()" sheet="default" visible="false" layoutpos="absolute" width="76rp" height="96rp" alpha="255" animation="alpha|s|fast">
		<Element id="atom(innerElem)" layoutpos="client" class="item"/>
		<Element id="atom(iconElemShadow)" contentalign="bottomcenter" background="argb(0,0,0,0)" layoutpos="absolute" width="64rp" height="64rp" alpha ="0" animation="alpha|s|mediumslow|delayshort"/>
		<Element id="atom(iconElem)" contentalign="bottomcenter" background="argb(0,0,0,0)" layoutpos="absolute" width="48rp" height="48rp"/>
		<Element id="atom(shortcutElem)" background="argb(0,0,0,0)" layoutpos="absolute" width="32rp" height="32rp" alpha ="0" animation="alpha|s|mediumslow|delayshort"/>
		<RichText id="atom(textElem)" background="argb(0,0,0,0)" foreground="black" layoutpos="bottom" content=" " contentalign="wrapcenter|endellipsis" font="iconfont;100%"/>
		<Button id="atom(checkboxElem)" class="checkbox" background="argb(0,0,0,0)" visible="false" layoutpos="absolute" width="20rp" height="20rp" x="6rp" y="6rp"/>
	</Button>
	<stylesheets>
		<style resid="default">
			<if class="item">
				<Element background="themeable(dtb(Desktop::ListView,1,3), argb(0,0,0,0))" alpha="0" animation="alpha|log|veryfast"/>
				<if mousefocused="true">
					<Element background="themeable(dtb(Desktop::ListView,1,2), argb(0,0,0,0))" alpha="255"/>
				</if>
				<if selected="true">
					<Element background="themeable(dtb(Desktop::ListView,1,3), argb(0,0,0,0))" alpha ="255"/>
					<if mousefocused="true">
						<Element background="themeable(dtb(Desktop::ListView,1,6), argb(0,0,0,0))" alpha="255"/>
					</if>
				</if>
			</if>
			<if class="selector">
				<Element alpha="themeable(224, 148)"/>
				<if visible="false">
					<Element alpha="themeable(0, 148)"/>
				</if>
			</if>
			<if class="checkbox">
				<Button content="themeable(valueWithHighContrastFallback(dtb(DirectUI::Button,3,1), dtb(Button,9,1)), argb(0,0,0,0))"/>
				<if mousefocused="true">
					<Button content="themeable(valueWithHighContrastFallback(dtb(DirectUI::Button,3,2), dtb(Button,9,2)), argb(0,0,0,0))"/>
				</if>
				<if selected="true">
					<Button content="themeable(valueWithHighContrastFallback(dtb(DirectUI::Button,3,5), dtb(Button,9,5)), argb(0,0,0,0))"/>
					<if mousefocused="true">
						<Button content="themeable(valueWithHighContrastFallback(dtb(DirectUI::Button,3,6), dtb(Button,9,6)), argb(0,0,0,0))"/>
					</if>
				</if>
			</if>
			<if class="singleclicked">
				<Button cursor="hand"/>
			</if>
			<if class="doubleclicked">
				<Button cursor="arrow"/>
			</if>
		</style>
	</stylesheets>
</duixml>