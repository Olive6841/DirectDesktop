	</Element>
	<stylesheets>
		<style resid="default">
			<if class="item">
				<Element background="argb(0,0,0,0)"/>
				<if mousefocused="true">
					<Element background="themeable(dtb(Desktop::ListView,1,2), argb(0,0,0,0))"/>
				</if>
				<if selected="true">
					<Element background="themeable(dtb(Desktop::ListView,1,3), argb(0,0,0,0))"/>
					<if mousefocused="true">
						<Element background="themeable(dtb(Desktop::ListView,1,6), argb(0,0,0,0))"/>
					</if>
				</if>
			</if>
		</style>
	</stylesheets>
