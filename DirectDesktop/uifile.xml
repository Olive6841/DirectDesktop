<duixml>
	<HWNDElement resid="main" layoutpos="client" layout="borderlayout()" sheet="default">
		<Element id="atom(sampleText)" content="" layoutpos="top"/>
		<Element layout="flowlayout()" layoutpos="top">
			<CCPushButton id="atom(testButton5)" height="32rp" width="120rp" content="Initialize layout" tooltip="true" accdesc="Do not press too quickly!"/>
			<CCPushButton id="atom(testButton)" height="32rp" width="120rp" content="Refresh"/>
			<CCPushButton id="atom(testButton2)" height="32rp" width="120rp" content="Simulate dragdrop" Enabled="false"/>
			<CCPushButton id="atom(testButton3)" height="32rp" width="120rp" content="Simulate popup"/>
			<CCPushButton id="atom(testButton4)" height="32rp" width="120rp" content="COLORS"/>
			<Element id="atom(itemcountstatus)" animation="alpha|s|slow|delaylong" foreground="themeable(gtc(ControlPanel,7,1,3803), hotlight)" font="messagefont;115%"/>
		</Element>
		<Element layout="borderlayout()" layoutpos="client" padding="rect(16rp,16rp,16rp,16rp)">
			<Element id="atom(mainContainer)" layout="filllayout()" layoutpos="client" borderthickness="rect(1,1,1,1)" bordercolor="white" background="gradient(paleturquoise, lightblue, 1)">
				<Element id="atom(UIContainer)" layout="filllayout()" layoutpos="client" margin="rect(4rp,4rp,4rp,4rp)" background="argb(0,0,0,0)">
					<Button id="atom(emptyspace)" layoutpos="client"/>
				</Element>
				<Element id="atom(fullscreenpopup)" layout="filllayout()" layoutpos="client" background="argb(0,0,0,0)" margin="rect(0,0,0,0)" padding="rect(-4rp,-4rp,-4rp,-4rp)" alpha="0" animation="alpha|linear|veryfast">
					<Element id="atom(fullscreenpopupbase)" layout="filllayout()" layoutpos="client"  background="argb(128,16,16,16)" visible="false">
						<Element id="atom(fullscreeninner)" layout="filllayout()" layoutpos="absolute" width="300rp" height="100rp" background="20575" content="Test" font="iconfont;400%" contentalign="topleft" visible="false"/>
					</Element>
				</Element>
			</Element>
		</Element>
	</HWNDElement>
	<Button resid="outerElem" layout="filllayout()" sheet="default" class="item" visible="false" layoutpos="absolute" width="76rp" height="96rp" alpha="0" animation="alpha|s|fast">
		<Element id="atom(iconElemShadow)" background="20575" layoutpos="absolute" width="64rp" height="64rp" alpha ="0" animation="alpha|s|mediumslow|delayshort"/>
		<Element id="atom(iconElem)" background="20575" layoutpos="absolute" width="48rp" height="48rp" content="icon(4,48rp,48rp,1,1,library(imageres.dll))"/>
		<RichText id="atom(textElem)" background="20575" foreground="black" layoutpos="bottom" content=" " contentalign="wrapcenter|endellipsis" font="iconfont;100%"/>
	</Button>
	<stylesheets>
		<style resid="default">
			<if class="item">
				<Button background="argb(0,0,0,0)"/>
				<if mousefocused="true">
					<Button background="themeable(dtb(Desktop::ListView,1,2), argb(0,0,0,0))"/>
				</if>
				<if selected="true">
					<Button background="themeable(dtb(Desktop::ListView,1,3), argb(0,0,0,0))"/>
					<if mousefocused="true">
						<Button background="themeable(dtb(Desktop::ListView,1,6), argb(0,0,0,0))"/>
					</if>
				</if>
			</if>
		</style>
	</stylesheets>
</duixml>